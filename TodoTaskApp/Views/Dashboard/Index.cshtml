<div class="dashboard-page">
    <div class="container-fluid py-2">
        <!-- Compact Header -->
        <div class="row mb-2">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="text-primary fw-bold mb-1">Dashboard</h3>
                    <small class="text-muted">Overview of your todo tasks and statistics</small>
                </div>
                <div>
                    <a href="/Todo" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-tasks me-1"></i>Back to Tasks
                    </a>
                </div>
            </div>
        </div>
        @* 123 *@
        <!-- Loading Spinner -->
        <div id="loadingSpinner" class="text-center py-3">
            <div class="spinner-border text-primary" role="status" style="width: 2rem; height: 2rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <small class="mt-2 text-muted d-block">Loading dashboard statistics...</small>
        </div>

        <!-- Error Message -->
        <div id="errorMessage" class="alert alert-danger d-none py-2" role="alert">
            <h6 class="alert-heading mb-1">Error!</h6>
            <small class="mb-1">Unable to load dashboard statistics. Please try refreshing the page.</small>
            <button class="btn btn-outline-danger btn-sm mt-1" onclick="window.location.reload()">
                <i class="fas fa-refresh me-1"></i>Retry
            </button>
        </div>

        <!-- Dashboard Content -->
        <div id="dashboardContent" class="d-none">
            <!-- Statistics Cards - 4 Cards in One Row (BIGGER NUMBERS) -->
            <div class="row g-2 mb-3">
                <!-- Total Tasks -->
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="card shadow-sm border-0 h-100 compact-card">
                        <div class="card-body text-center py-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="card-title text-muted mb-0 small">Total Tasks</h6>
                                <div class="badge bg-primary rounded-circle compact-icon">
                                    <i class="fas fa-list-check fa-sm"></i>
                                </div>
                            </div>
                            <h1 class="fw-bold text-primary mb-0 big-number" id="totalTasksCount">0</h1>
                            <small class="text-muted">in system</small>
                        </div>
                    </div>
                </div>

                <!-- Upcoming -->
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="card shadow-sm border-0 h-100 compact-card">
                        <div class="card-body text-center py-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="card-title text-muted mb-0 small">Upcoming</h6>
                                <div class="badge bg-success rounded-circle compact-icon">
                                    <i class="fas fa-calendar-days fa-sm"></i>
                                </div>
                            </div>
                            <h1 class="fw-bold text-success mb-0 big-number" id="upcomingTasksCount">0</h1>
                            <small class="text-muted">due future</small>
                        </div>
                    </div>
                </div>

                <!-- Completed -->
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="card shadow-sm border-0 h-100 compact-card">
                        <div class="card-body text-center py-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="card-title text-muted mb-0 small">Completed</h6>
                                <div class="badge bg-success rounded-circle compact-icon">
                                    <i class="fas fa-check-circle fa-sm"></i>
                                </div>
                            </div>
                            <h1 class="fw-bold text-success mb-1 big-number" id="completedPercentage">0%</h1>
                            <div class="progress compact-progress">
                                <div class="progress-bar bg-success" id="completedProgressBar" style="width: 0%"></div>
                            </div>
                            <small class="text-muted">of all tasks</small>
                        </div>
                    </div>
                </div>

                <!-- Pending -->
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="card shadow-sm border-0 h-100 compact-card">
                        <div class="card-body text-center py-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="card-title text-muted mb-0 small">Pending</h6>
                                <div class="badge bg-warning rounded-circle compact-icon">
                                    <i class="fas fa-clock fa-sm"></i>
                                </div>
                            </div>
                            <h1 class="fw-bold text-warning mb-1 big-number" id="pendingPercentage">0%</h1>
                            <div class="progress compact-progress">
                                <div class="progress-bar bg-warning" id="pendingProgressBar" style="width: 0%"></div>
                            </div>
                            <small class="text-muted">of all tasks</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Line Chart Section - Compact -->
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white border-0 py-2">
                            <h6 class="card-title mb-0 text-primary">Task Creation Trends</h6>
                            <small class="text-muted">Tasks created 1 month before and after today</small>
                        </div>
                        <div class="card-body py-2">
                            <div class="line-chart-compact chart-container">
                                <canvas id="monthlyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section - Side by Side (Compact) -->
            <div class="row g-2">
                <!-- Priority Distribution Chart -->
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white border-0 py-2">
                            <h6 class="card-title mb-0 text-primary">Priority Distribution</h6>
                            <small class="text-muted">Tasks by priority level</small>
                        </div>
                        <div class="card-body py-2">
                            <div class="donut-chart-compact chart-container">
                                <canvas id="priorityChart"></canvas>
                            </div>
                            <!-- Priority Stats -->
                            <div class="row mt-2 text-center">
                                <div class="col-4">
                                    <span class="badge bg-danger badge-sm">High</span>
                                    <div class="fw-bold small mt-1" id="highPriorityCount">0</div>
                                    <small class="text-muted" id="highPriorityPercentage">0%</small>
                                </div>
                                <div class="col-4">
                                    <span class="badge bg-secondary badge-sm">Normal</span>
                                    <div class="fw-bold small mt-1" id="normalPriorityCount">0</div>
                                    <small class="text-muted" id="normalPriorityPercentage">0%</small>
                                </div>
                                <div class="col-4">
                                    <span class="badge bg-info badge-sm">Low</span>
                                    <div class="fw-bold small mt-1" id="lowPriorityCount">0</div>
                                    <small class="text-muted" id="lowPriorityPercentage">0%</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Distribution Chart - Polar Area -->
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white border-0 py-2">
                            <h6 class="card-title mb-0 text-primary">Status Distribution</h6>
                            <small class="text-muted">Tasks by current status</small>
                        </div>
                        <div class="card-body py-2">
                            <div class="polar-chart-compact chart-container">
                                <canvas id="statusChart"></canvas>
                            </div>
                            <!-- Status Stats -->
                            <div class="row mt-2 text-center">
                                <div class="col-4">
                                    <span class="badge bg-primary badge-sm">Pending</span>
                                    <div class="fw-bold small mt-1" id="pendingTasksCount">0</div>
                                    <small class="text-muted" id="pendingTasksPercentage">0%</small>
                                </div>
                                <div class="col-4">
                                    <span class="badge bg-warning text-dark badge-sm">Hold</span>
                                    <div class="fw-bold small mt-1" id="holdTasksCount">0</div>
                                    <small class="text-muted" id="holdTasksPercentage">0%</small>
                                </div>
                                <div class="col-4">
                                    <span class="badge bg-success badge-sm">Done</span>
                                    <div class="fw-bold small mt-1" id="completedTasksCount">0</div>
                                    <small class="text-muted" id="completedTasksPercentage">0%</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js"></script>
}
