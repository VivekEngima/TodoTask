@{
    ViewData["Title"] = "Home - Todo Task App";
}

<div class="text-center">
    <div class="jumbotron bg-primary text-white rounded p-5 mb-4">
        <div class="container-fluid py-5">
            <h1 class="display-4 fw-bold">
                <i class="fas fa-tasks me-3"></i>Welcome to Todo Task App
            </h1>
            <p class="col-md-8 fs-4 mx-auto">
                Manage your tasks efficiently with our modern, responsive todo application.
                Get organized and boost your productivity today!
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a class="btn btn-light btn-lg px-4 fw-bold" asp-controller="Todo" asp-action="Index">
                    <i class="fas fa-rocket me-2"></i>Get Started
                </a>
                <button type="button" class="btn btn-outline-light btn-lg px-4" data-bs-toggle="modal" data-bs-target="#featuresModal">
                    <i class="fas fa-star me-2"></i>View Features
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-plus-circle text-success mb-3" style="font-size: 3rem;"></i>
                    <h4>Create Tasks</h4>
                    <p class="card-text">Easily add new tasks with titles, descriptions, priorities, and due dates.</p>
                    <a href="@Url.Action("Index", "Todo")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Add Tasks
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-search text-primary mb-3" style="font-size: 3rem;"></i>
                    <h4>Search & Filter</h4>
                    <p class="card-text">Find your tasks quickly with powerful search and filtering capabilities.</p>
                    <a href="@Url.Action("Index", "Todo")" class="btn btn-primary">
                        <i class="fas fa-filter me-1"></i>Explore Filters
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-warning mb-3" style="font-size: 3rem;"></i>
                    <h4>Track Progress</h4>
                    <p class="card-text">Monitor your task completion and stay on top of deadlines.</p>
                    <a href="@Url.Action("Index", "Todo")" class="btn btn-warning">
                        <i class="fas fa-chart-line me-1"></i>View Progress
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Modal -->
<div class="modal fade" id="featuresModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-star me-2"></i>Todo Task App Features
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="fas fa-tasks text-primary me-2"></i>Task Management</h6>
                        <ul>
                            <li>Create, edit, and delete tasks</li>
                            <li>Set priorities and due dates</li>
                            <li>Add detailed descriptions</li>
                            <li>Track task status</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-filter text-success me-2"></i>Smart Filtering</h6>
                        <ul>
                            <li>Filter by priority level</li>
                            <li>Filter by task status</li>
                            <li>Real-time search functionality</li>
                            <li>Quick filter buttons</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="@Url.Action("Index", "Todo")" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-1"></i>Start Using
                </a>
            </div>
        </div>
    </div>
</div>